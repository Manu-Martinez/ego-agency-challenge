---
import { fetchModels } from '../../utils/api.js';

let models = [];

// Funci√≥n para obtener los modelos cuando el componente se monta
async function fetchAndSetModels() {
  try {
    models = await fetchModels();
  } catch (error) {
    console.error('Error fetching models:', error);
  }
}

await fetchAndSetModels();
---

<div class="vehicles-container">
  {models.length > 0 ? (
    models.map(model => (
      <div class="vehicle-card">
        <div class="text-container">
          <h3>{model.name}</h3>
          <div class="info-row">
			<p>
				{model.year} | ${model.price.toLocaleString()}
			</p>
          </div>
        </div>
        <div class="image-container">
          <img src={model.thumbnail} alt={model.name} />
        </div>
      </div>
    ))
  ) : (
    <p>No se encontraron modelos.</p>
  )}
</div>

<style>
.vehicles-container {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-gap: 20px;
  margin: 20px 105px;
  align-items: center;
}

.vehicle-card {
  border: 1px solid #d3d3d3;
  border-radius: 5px;
  padding: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 400px;
  box-sizing: border-box;
  background-color: #fff;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.image-container {
  width: 100%;
  height: 500px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
}

.vehicle-card img {
  max-height: 100%;
  width: 300px;
  object-fit: cover;
  border-radius: 5px;
}

.text-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.text-container .info-row {
  display: flex;
  justify-content: space-between;
  width: 100%;
  gap: 10px;
}

.text-container .info-row p {
	gap: 20px;
  margin: 0;
  font-size: 1em;
}

.vehicle-card h3, .vehicle-card p {
  width: 100%;
  text-align: center;
  margin: 5px 0;
}

.vehicle-card h3 {
  font-size: 1.2em;
}

.vehicle-card p {
  font-size: 1em;
}
</style>
